@page
@model UserRolesModel
@{
    ViewData["Title"] = "Assign Roles to User";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-bold">Assign Roles to User</h5>
        <small class="text-muted float-end">User Role Management</small>
    </div>
    <div class="card-body">
        @if (Model.UserEntity != null)
        {
            <div class="mb-3">
                <strong>User:</strong> @Model.UserEntity.Email
            </div>
            <form method="post" class="form-horizontal">
                <input type="hidden" asp-for="UserId" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-4">
                    <label class="fw-bold mb-2">Available Roles</label>
                    <div class="row">
                        @foreach (var t in Model.Roles)
                        {
                            var roleId = $"role_{t.Name}";
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="SelectedRoles"
                                           value="@t.Name"
                                           id="@roleId"
                                           @(t.Assigned ? "checked" : "") />
                                    <label class="form-check-label" for="@roleId">
                                        <span class="fw-bold">@t.Name</span>
                                        <span class="text-muted small d-block">@t.Description</span>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Save Roles</button>
                        <a asp-page="./Index" class="btn btn-secondary ms-2">Cancel</a>
                    </div>
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-danger">User not found.</div>
        }
    </div>
</div>
