@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="card mb-6">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h4 class="mb-0">Personal Data</h4>
        <small class="text-muted float-end">Download or delete your personal data</small>
    </div>
    <div class="card-body">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <div class="d-flex justify-content-end gap-2">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-0">
                <button class="btn btn-primary btn-sm" type="submit">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger btn-sm">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
