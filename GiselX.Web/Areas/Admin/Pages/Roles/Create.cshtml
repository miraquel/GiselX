@page
@model CreateModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-bold">Create Role</h5>
        <small class="text-muted float-end">Role Management</small>
    </div>
    <div class="card-body">
        <form method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row mb-4 align-items-center">
                <label asp-for="Input.RoleName" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.RoleName" class="form-control" />
                    <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4 align-items-center">
                <label asp-for="Input.RoleDescription" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.RoleDescription" class="form-control" />
                    <span asp-validation-for="Input.RoleDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
