@page
@model GiselX.Web.Areas.Admin.Pages.Users.SuspendModel
@{
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-bold">Suspend User</h5>
        <small class="text-muted float-end">User Suspension</small>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success">@Model.StatusMessage</div>
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row mb-4 align-items-center">
                <label asp-for="LockoutEnabled" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <div class="form-check mt-2">
                        <input asp-for="LockoutEnabled" class="form-check-input" type="checkbox" />
                    </div>
                    <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4 align-items-center">
                <label asp-for="LockoutEnd" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                    <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">Suspend User</button>
                    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>